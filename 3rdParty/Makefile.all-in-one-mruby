# -*- mode: Makefile; -*-

## -----------------------------------------------------------------------------
## --SECTION--                                                           LIBRARY
## -----------------------------------------------------------------------------

################################################################################
### @brief mruby
################################################################################

BUILT_SOURCES += @MRUBY_LIBS@
CLEANUP += @srcdir@/.mruby-build-@TRI_BITS@

@MRUBY_LIBS@: @srcdir@/.mruby-build-@TRI_BITS@

@srcdir@/.mruby-build-@TRI_BITS@:
	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILDING mruby"
	@echo "--------------------------------------------------------------------------------"
	@echo

	cd @top_srcdir@/3rdParty/mruby && $(MAKE) -j1

	touch @srcdir@/.mruby-build-@TRI_BITS@

	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILD mruby FINISHED"
	@echo "--------------------------------------------------------------------------------"
	@echo

################################################################################
### @brief additional files to remove
################################################################################

CLEANUP += .mruby-build-@TRI_BITS@

## -----------------------------------------------------------------------------
## --SECTION--                                                       END-OF-FILE
## -----------------------------------------------------------------------------


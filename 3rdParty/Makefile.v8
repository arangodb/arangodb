################################################################################
### @brief V8
################################################################################

BUILT_SOURCES += @V8_LIBS@

DEBUG_V8_FLAGS = -DV8_TARGET_ARCH_X64 -DENABLE_GDB_JIT_INTERFACE -DV8_DEPRECATION_WARNINGS -DV8_I18N_SUPPORT -DGTEST_HAS_POSIX_RE=0 -DGTEST_LANG_CXX11=0 -DUNIT_TEST -DGTEST_HAS_RTTI=0 -DENABLE_DISASSEMBLER -DV8_ENABLE_CHECKS -DOBJECT_PRINT -DVERIFY_HEAP -DDEBUG -DENABLE_EXTRA_CHECKS -DENABLE_HANDLE_ZAPPING -DOPTIMIZED_DEBUG

@V8_LIBS@: @srcdir@/.v8-build-@TRI_BITS@

@srcdir@/.v8-build-@TRI_BITS@:
	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILDING V8"
	@echo "--------------------------------------------------------------------------------"
	@echo

################################################################################
## ARM
################################################################################

if ENABLE_ARM
if ENABLE_V8_DEBUG
	cd @top_srcdir@/3rdParty/V8-3.29.59 \
	  && $(MAKE) \
		CFLAGS="-O0 -ggdb -fsigned-char -march=armv6 $(DEBUG_V8_FLAGS)" \
		CXXFLAGS="-O0 -ggdb -fsigned-char -march=armv6 $(DEBUG_V8_FLAGS)" \
		LDFLAGS="-march=armv6" \
		CC=$(CC) \
		CC.host=$(CC) \
		CXX=$(CXX) \
		CXX.host=$(CXX) \
		LINK=$(CXX) \
		GYPFLAGS="-Darm_fpu=vfp -Darm_version=6 -Dstandalone_static_library=1" \
		debug=on v8_optimized_debug=0 v8_enable_backtrace=on \
		library=static strictaliasing=off snapshot=off werror=no hardfp=on @V8_TARGET@
else
	cd @top_srcdir@/3rdParty/V8-3.29.59 \
	  && $(MAKE) \
		CFLAGS="-O2 -g -fsigned-char -march=armv6" \
		CXXFLAGS="-O2 -g -fsigned-char -march=armv6" \
		LDFLAGS="-march=armv6" \
		CC=$(CC) \
		CC.host=$(CC) \
		CXX=$(CXX) \
		CXX.host=$(CXX) \
		LINK=$(CXX) \
		GYPFLAGS="-Darm_fpu=vfp -Darm_version=6 -Dstandalone_static_library=1" \
		library=static strictaliasing=off snapshot=off werror=no hardfp=on @V8_TARGET@
endif

################################################################################
## DARWIN DEBUG
################################################################################

else # ! ENABLE_ARM
if ENABLE_DARWIN
if ENABLE_V8_DEBUG
	cd @top_srcdir@/3rdParty/V8-3.29.59 \
	  && $(MAKE) \
		LDFLAGS="-lc++" \
		CFLAGS="-O0 -ggdb $(DEBUG_V8_FLAGS)" \
		CXXFLAGS="-O0 -ggdb $(DEBUG_V8_FLAGS)" \
		CC=$(CC) \
		CC.host=$(CC) \
		CXX=$(CXX) \
		CXX.host=$(CXX) \
		LINK=$(CXX) \
		GYPFLAGS="-Dstandalone_static_library=1" \
		debug=on v8_optimized_debug=0 v8_enable_backtrace=on \
		library=static strictaliasing=off snapshot=off werror=no @V8_TARGET@

################################################################################
## DARWIN RELEASE
################################################################################

else # ! ENABLE_V8_DEBUG
	cd @top_srcdir@/3rdParty/V8-3.29.59 \
	  && $(MAKE) \
		LDFLAGS="-lc++" \
                CFLAGS="-O2 -g" \
		CXXFLAGS="-O2 -g" \
		CC=$(CC) \
		CC.host=$(CC) \
		CXX=$(CXX) \
		CXX.host=$(CXX) \
		LINK=$(CXX) \
		GYPFLAGS="-Dstandalone_static_library=1" \
		library=static strictaliasing=off snapshot=off werror=no @V8_TARGET@
endif # ENABLE_V8_DEBUG

################################################################################
## DARWIN RELEASE
################################################################################

else # ! ENABLE_DARWIN
if ENABLE_V8_DEBUG
	cd @top_srcdir@/3rdParty/V8-3.29.59 \
	  && $(MAKE) \
		CFLAGS="-O0 -ggdb $(DEBUG_V8_FLAGS)" \
		CXXFLAGS="-O0 -ggdb $(DEBUG_V8_FLAGS)" \
		CC=$(CC) \
		CC.host=$(CC) \
		CXX=$(CXX) \
		CXX.host=$(CXX) \
		LINK=$(CXX) \
		GYPFLAGS="-Dstandalone_static_library=1" \
		debug=on v8_optimized_debug=0 v8_enable_backtrace=on \
		library=static strictaliasing=off snapshot=off werror=no @V8_TARGET@
else # ! ENABLE_V8_DEBUG
	cd @top_srcdir@/3rdParty/V8-3.29.59 \
	  && $(MAKE) \
		CFLAGS="-O2 -g" \
		CXXFLAGS="-O2 -g" \
		CC=$(CC) \
		CC.host=$(CC) \
		CXX=$(CXX) \
		CXX.host=$(CXX) \
		LINK=$(CXX) \
		GYPFLAGS="-Dstandalone_static_library=1" \
		library=static strictaliasing=off snapshot=off werror=no @V8_TARGET@
endif # ENABLE_V8_DEBUG
endif # ENABLE_DARWIN
endif # ENABLE_ARM

	touch @srcdir@/.v8-build-@TRI_BITS@

	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILD V8 FINISHED"
	@echo "--------------------------------------------------------------------------------"
	@echo

################################################################################
### @brief additional files to remove
################################################################################

CLEANUP_3RD += clean-v8

clean-v8:
	rm -f @srcdir@/.v8-build-@TRI_BITS@
	cd @top_srcdir@/3rdParty/V8-3.29.59 && ( $(MAKE) clean || true )
	find @top_srcdir@/3rdParty/V8-3.29.59 -name "*.pyc" -exec rm "{}" ";"
	rm -rf @top_srcdir@/3rdParty/V8-3.29.59/out


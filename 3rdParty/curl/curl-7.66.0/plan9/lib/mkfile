<../mkfile.proto
<|mkfile.inc

CFLAGS=$CFLAGS -I../include -I. -c

OFILES=${CSOURCES:%.c=%.$O}
HFILES=$HHEADERS
LIB=/$objtype/lib/ape/libcurl.a

CLEANFILES=\
	${LIB_VAUTH_CFILES:%.c=%.$O}\
	${LIB_VTLS_CFILES:%.c=%.$O}\

</sys/src/cmd/mklib

%.$O: %.c
	$CC $CFLAGS -o $target $stem.c

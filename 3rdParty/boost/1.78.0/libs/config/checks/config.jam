import modules ;

rule requires ( names + )
{
   local config-binding = [ modules.binding $(__name__) ] ;

   local result ;
   for name in $(names)
   {
      result += [ check-target-builds $(config-binding:D)//$(name) $(name) : : <build>no ] ;
   }
   return $(result) ;
}


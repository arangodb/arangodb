project spirit-x3-example-rexpr
   : requirements
      <c++-template-depth>512
      <toolset>gcc:<cxxflags>-std=c++14
      <toolset>clang:<cxxflags>-std=c++1y
      <toolset>darwin:<cxxflags>-std=c++14
      <use>/boost//headers
      <include>.
   ;

lib rexpr
   : [ glob src/*.cpp ] /boost//system
   ;

build-project test ;

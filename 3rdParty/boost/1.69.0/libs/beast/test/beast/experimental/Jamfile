local SOURCES =
    error.cpp
    flat_stream.cpp
    icy_stream.cpp
    ssl_stream.cpp
    stream.cpp
    timeout_socket.cpp
    timeout_service.cpp
    timeout_work_guard.cpp
    ;

local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [ run $(f) $(TEST_MAIN) ] ;
}

alias run-tests : $(RUN_TESTS) ;

exe fat-tests : $(TEST_MAIN) $(SOURCES) ;

explicit fat-tests ;

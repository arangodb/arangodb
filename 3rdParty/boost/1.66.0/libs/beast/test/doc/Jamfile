alias run-tests :
    [ compile core_snippets.cpp ]
    [ compile http_snippets.cpp ]
    [ compile websocket_snippets.cpp ]
    [ run core_examples.cpp $(TEST_MAIN) ]
    [ run http_examples.cpp $(TEST_MAIN) ]
    ;

exe fat-tests :
    $(TEST_MAIN)
    core_examples.cpp
    http_examples.cpp
    ;

explicit fat-tests ;

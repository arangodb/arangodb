local SOURCES =
    detect_ssl.cpp
    root_certificates.cpp
    server_certificate.cpp
    session_alloc.cpp
    ssl_stream.cpp
    ;

local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [ compile $(f) ] ;
}

alias run-tests : $(RUN_TESTS) ;

alias build-fat : run-tests ;

explicit build-fat ;

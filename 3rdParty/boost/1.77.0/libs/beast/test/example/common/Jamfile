local SOURCES =
    root_certificates.cpp
    server_certificate.cpp
    ;

local RUN_TESTS ;

local libs =
    /boost/beast//lib-asio-ssl
    /boost/beast/test//lib-test
    ;

for local f in $(SOURCES)
{
    RUN_TESTS += [ run $(f) $(libs) ] ;
}

alias run-tests : $(RUN_TESTS) ;

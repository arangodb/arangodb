local SOURCES =
    basic_dynamic_body.cpp
    basic_file_body.cpp
    basic_parser.cpp
    buffer_body.cpp
    chunk_encode.cpp
    dynamic_body.cpp
    error.cpp
    field.cpp
    field_compiles.cpp
    fields.cpp
    file_body.cpp
    message.cpp
    parser.cpp
    read.cpp
    rfc7230.cpp
    serializer.cpp
    span_body.cpp
    status.cpp
    string_body.cpp
    type_traits.cpp
    vector_body.cpp
    verb.cpp
    write.cpp
    ;

local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [ run $(f)
        /boost/beast/test//lib-test
    ] ;
}

alias run-tests : $(RUN_TESTS) ;

exe fat-tests :
    $(SOURCES)
    /boost/beast/test//lib-test
    ;

explicit fat-tests ;

run $(SOURCES)
    /boost/beast/test//lib-test
    : : : : run-fat-tests ;

explicit run-fat-tests ;

import asciidoctor ;

html io.html : io.adoc ;

install html_ : io.html : <location>html ;

pdf io.pdf : io.adoc ;
explicit io.pdf ;

install pdf_ : io.pdf : <location>pdf ;
explicit pdf_ ;

alias boostdoc ;
explicit boostdoc ;

alias boostrelease : html_ ;
explicit boostrelease ;

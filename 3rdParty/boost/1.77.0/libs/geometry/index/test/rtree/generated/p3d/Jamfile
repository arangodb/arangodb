rule test_all
{
   local all_rules = ;

   for local fileb in [ glob *.cpp ]
   {
      all_rules += [ run $(fileb)
      :  # additional args
      :  # test-files
      :  # requirements
        <toolset>msvc:<cxxflags>/bigobj
        <host-os>windows,<toolset>intel:<cxxflags>/bigobj
      ] ;
   }

   return $(all_rules) ;
}

test-suite boost-geometry-index-rtree-generated-p3d : [ test_all r ] ;


local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [ run $(f)
        /boost/beast/test//lib-test
    ] ;
}

alias run-tests : $(RUN_TESTS) ;

exe fat-tests :
    $(SOURCES)
    /boost/beast/test//lib-test
    ;

explicit fat-tests ;

run $(SOURCES)
    /boost/beast/test//lib-test
    : : : : run-fat-tests ;

explicit run-fat-tests ;

local SOURCES =
    _detail_decorator.cpp
    _detail_impl_base.cpp
    _detail_prng.cpp
    accept.cpp
    close.cpp
    error.cpp
    frame.cpp
    handshake.cpp
    option.cpp
    ping.cpp
    read1.cpp
    read2.cpp
    read3.cpp
    rfc6455.cpp
    ssl.cpp
    stream.cpp
    stream_base.cpp
    stream_explicit.cpp
    stream_fwd.cpp
    teardown.cpp
    timer.cpp
    utf8_checker.cpp
    write.cpp
    ;

local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [ run $(f)
        /boost/beast//lib-asio-ssl
        /boost/beast/test//lib-test
    ] ;
}

alias run-tests : $(RUN_TESTS) ;

exe fat-tests
    :
    $(SOURCES)
    /boost/beast//lib-asio-ssl
    /boost/beast/test//lib-test
    ;

explicit fat-tests ;

run $(SOURCES)
    /boost/beast//lib-asio-ssl
    /boost/beast/test//lib-test
    : : : : run-fat-tests ;

explicit run-fat-tests ;

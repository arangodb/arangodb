import testing ;
import ../../config/checks/config : requires ;

project hof
    : requirements [ requires cxx11_variadic_templates cxx11_constexpr ]
      <include>../include/ 
    ;

rule test_all
{
   local all_rules = ;

   for local fileb in [ glob *.cpp ]
   {
      all_rules += [ run $(fileb)
      :  # additional args
      :  # test-files
      :  # requirements
      ] ;
   }

   return $(all_rules) ;
}

test-suite hof : [ test_all r ] : ;

# -*- mode: Makefile; -*-

## -----------------------------------------------------------------------------
## --SECTION--                                                           LIBRARY
## -----------------------------------------------------------------------------

################################################################################
### @brief libev
################################################################################

BUILT_SOURCES += @LIBEV_LIBS@
CLEANUP += @srcdir@/.libev-build-@TRI_BITS@ @top_srcdir@/3rdParty/libev/BUILD

@LIBEV_LIBS@: @srcdir@/.libev-build-@TRI_BITS@

@srcdir@/.libev-build-@TRI_BITS@:
	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILDING libev"
	@echo "--------------------------------------------------------------------------------"
	@echo

	mkdir @top_srcdir@/3rdParty/libev/BUILD || true
	cd @top_srcdir@/3rdParty/libev/BUILD && ../configure --disable-shared
	cd @top_srcdir@/3rdParty/libev/BUILD && $(MAKE)

	touch @srcdir@/.libev-build-@TRI_BITS@

	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILD libev FINISHED"
	@echo "--------------------------------------------------------------------------------"
	@echo

################################################################################
### @brief additional files to remove
################################################################################

CLEANUP += .libev-build-@TRI_BITS@

## -----------------------------------------------------------------------------
## --SECTION--                                                       END-OF-FILE
## -----------------------------------------------------------------------------


  ${NSD_GetState} $Dlg1_CB_as_service $R0
  ${If} $R0 = ${BST_CHECKED}
    StrCpy $TRI_INSTALL_SERVICE "1"
  ${Else}
    StrCpy $TRI_INSTALL_SERVICE "0"
  ${EndIf}

  ${NSD_GetState} $Dlg1_CB_DesktopIcon $R0

  ${If} $R0 = ${BST_CHECKED}
    StrCpy $AUTOMATIC_BACKUP "1"
  ${Else}
    StrCpy $AUTOMATIC_BACKUP "0"
  ${EndIf}

  ${NSD_GetState} $Dlg1_CB_add_path $R0
  ${If} $R0 = ${BST_CHECKED}

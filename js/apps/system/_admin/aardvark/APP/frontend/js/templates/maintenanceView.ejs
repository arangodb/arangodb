<div id="maintenanceContent" class="innerContent">

  <div class="pure-g">

    <div class="pure-u-1-1 pure-u-md-1-1 pure-u-lg-1-1 pure-u-xl-1-1">
      <% if (error) { %>
        <div id="maintenanceMode" class="infoBox errorBox" style="margin-top: 15px; margin-bottom: 20px">
          <h4>Attention <i class="fa fa-check fa-exclamation"></i></h4>
          <p>Could not fetch maintenance mode information!</p>
        </div>
      <% } %>

      <% if (maintenanceMode) { %>
        <div id="maintenanceMode" class="infoBox warningBox" style="margin-top: 15px; margin-bottom: 20px">
          <h4>Attention <i class="fa fa-check fa-exclamation"></i></h4>
          <p>The maintenance mode is enabled.</p>
        </div>
      <% } else { %>
        <div id="maintenanceMode" class="infoBox successBox" style="margin-top: 15px; margin-bottom: 20px">
          <h4>Normal <i class="fa fa-check"></i></h4>
          <p>The maintenance mode is disabled.</p>
        </div>
      <% } %>

      <% if (maintenanceMode) { %>
        <button id="disableMaintenanceMode" class="button-success pull-right"
                style="margin-right: 20px;">Disable Maintenance Mode
        </button>
      <% } else { %>
        <button id="enableMaintenanceMode" class="button-warning pull-right"
                style="margin-right: 20px;">Enable Maintenance Mode
        </button>
      <% } %>
    </div>


  </div>

</div>
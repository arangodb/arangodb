{
  "name": "sessions",
  "description": "Session storage for Foxx.",
  "author": "ArangoDB GmbH",
  "version": "0.1",
  "license": "Apache License, Version 2.0",
  "isSystem": true,

  "repository": {
    "type": "git",
    "url": "https://github.com/triAGENS/ArangoDB.git"
  },

  "contributors": [
    {
      "name": "Alan Plum",
      "email": "me@pluma.io"
    }
  ],

  "controllers": {
    "/": "app.js"
  },

  "exports": {
    "sessionStorage": "storage.js"
  },

  "defaultDocument": "",

  "lib": ".",

  "setup": "setup.js",

  "configuration": {
    "timeToLive": {
      "description": "Session expiry timeout in milliseconds.",
      "type": "integer",
      "default": 604800000
    },
    "ttlType": {
      "description": "Timestamp session expiry should be checked against.",
      "type": "string",
      "default": "created"
    },
    "sidTimestamp": {
      "description": "Append a timestamp to the session id.",
      "type": "boolean",
      "default": false
    },
    "sidLength": {
      "description": "Length of the random part of the session id",
      "type": "integer",
      "default": 20
    }
  }
}

    </table>
  </div>
  <div class="modal-footer">
    <button class="btn btn-close" data-dismiss="modal" aria-hidden="true">Close</button>
    <button id="confirmCreateEdge" class="btn btn-success" style="float:right">Create</button>
  </div>
</div>

